{
  "name": "user",
  "plural": "user",
  "base": "User",
  "idInjection": true,
  "restrictResetPasswordTokenScope": true,
  "emailVerificationRequired": false,
  "inheritAcls": false,
  "postgresql": {
    "schema": "rades",
    "table": "user"
  },

  "properties": {
    "username": {
      "type": "String",
      "required": true
    },
     "email": {
      "type": "string",
      "required": true
    },
    "password": {
      "type": "String",
      "required": true,
      "default": "ayaya"
    },
    "tanggal_lahir": {
      "type": "date",
      "required": true
    },
    "gender": {
      "type": "string",
      "required": true,
      "enum": [
        "Male",
        "Female"
      ]
    },
     
    "alamat": {
      "type": "string",
      "required": true
    },
    "no_telp": {
      "type": "String",
      "required": false
    },
    "team_project": {
      "type": "Number",
      "required": false
    },
    "join_date": {
      "type": "date",
      "required": true
    },
    "end_date": {
      "type": "date",
      "required": true
    },
 
    "status": {
      "type": "String",
      "required": true
    }
    

  },
  "validations": [],
  "relations": {
    "task": {
      "type": "hasMany",
      "model": "task",
      "foreignKey": "user_id",
      "options": {
        "nestRemoting": true
      }
    },
    "cuti": {
      "type": "hasMany",
      "model": "cuti",
      "foreignKey": "user_id",
      "options": {
        "nestRemoting": true
      }
    },
    "kehadiran": {
      "type": "hasMany",
      "model": "kehadiran",
      "foreignKey": "user_id",
      "options": {
        "nestRemoting": true
      }
    },
    "divisi": {
      "type": "belongsTo",
      "model": "team_project",
      "foreignKey": "team_project",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType":"READ",
      "principalType":"ROLE",
      "principalId":"$everyone",
      "property":"*",
      "permission":"DENY"
    },
    {
      "accessType":"READ",
      "principalType":"ROLE",
      "principalId":"$authenticated",
      "property":"*",
      "permission":"ALLOW"
    },
    {
      "accessType":"EXECUTE",
      "principalType":"ROLE",
      "principalId":"$everyone",
      "property":[
        "create","deleteById","patchAttributes",
        "__delete__cuti","__create__cuti", "__destroyById__cuti","__updateById__cuti",
        "__delete__kehadiran","__create__kehadiran", "__destroyById__kehadiran","__updateById__kehadiran","__get__kehadiran"
      ],
      "permission":"DENY"
    },
    {
      "accessType":"EXECUTE",
      "principalType":"ROLE",
      "principalId":"admin",
      "property":[
        "create","deleteById","patchAttributes",
        "__create__cuti", "__destroyById__cuti","__updateById__cuti",
        "__get__kehadiran"
      ],
      "permission":"ALLOW"
    },
    {
      "accessType":"EXECUTE",
      "principalType":"ROLE",
      "principalId":"$owner",
      "property":[
        "__create__cuti", "__destroyById__cuti","__updateById__cuti",
        "__create__kehadiran", "__get__kehadiran"
      ],
      "permission":"ALLOW"
    },
    {
      "accessType":"EXECUTE",
      "principalType":"ROLE",
      "principalId":"admin-i",
      "property":[
        "__create__inventaris","__destroyById__inventaris","__updateById__inventaris"
      ],
      "permission":"ALLOW"
    }
  ],
  "methods": {}
}
