{
  "name": "user",
  "plural": "user",
  "base": "User",
  "idInjection": true,
  "restrictResetPasswordTokenScope": true,
  "emailVerificationRequired": false,
  "postgresql": {
    "schema": "public",
    "table": "user"
  },
  "properties": {
    "username": {
      "type": "String",
      "required": true,
      "max": 50,
      "min": 2
    },
    "email": {
      "type": "string",
      "required": true
    },
    "password": {
      "type": "String",
      "required": true,
      "max": 50,
      "min": 8,
      "pattern": "(?=.*[A-Z])(?=.*[!@#$&*])(?=.*[0-9])(?=.*[a-z])^.*$",
      "default": "ayaya"
    },
    "role": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "cuti_input": {
      "type": "hasMany",
      "model": "cuti_input",
      "foreignKey": "user_id",
      "options": {
        "nestRemoting": true
      }
    },
    "kehadiran": {
      "type": "hasMany",
      "model": "kehadiran",
      "foreignKey": "user_id",
      "options": {
        "nestRemoting": true
      }
    },
    "team_project": {
      "type": "belongsTo",
      "model": "team_project",
      "foreignKey": "team_name_id",
      "options": {
        "nestRemoting": true
      }
    },
    "profiles": {
      "type": "hasOne",
      "model": "profile",
      "foreignKey": "user_Id",
      "options": {
        "nestRemoting": true
      }
    },
    "salary": {
      "type": "hasOne",
      "model": "salary",
      "foreignKey": "user_id",
      "options": {
        "nestRemoting": true
      }
    },
    "pinjaman": {
      "type": "hasMany",
      "model": "pinjaman",
      "foreignKey": "user_id",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType":"READ",
      "principalType":"ROLE",
      "principalId":"$everyone",
      "property":"*",
      "permission":"ALLOW"
    },
    {
      "accessType":"READ",
      "principalType":"ROLE",
      "principalId":"$authenticated",
      "property":"*",
      "permission":"ALLOW"
    },
    {"accessType":"EXECUTE",
      "principalType":"ROLE",
      "principalId":"$everyone",
      "property":[
        "create","deleteById","patchAttributes",
        "__delete__cuti","__create__cuti", "__destroyById__cuti","__updateById__cuti",
        "__delete__kehadiran","__create__kehadiran", "__destroyById__kehadiran","__updateById__kehadiran","__get__kehadiran",
        "__get__profiles","__delete__profiles","__create__profiles", "__destroyById__profiles","__updateById__profiles", "__create__team_project__task", "__get__team_project", "__get__task"
      ],
      "permission":"ALLOW"
    },
    {
      "accessType":"EXECUTE",
      "principalType":"ROLE",
      "principalId":"admin",
      "property":[
        "create","deleteById","patchAttributes",
        "__create__cuti", "__destroyById__cuti", "__updateById__cuti",
        "__get__kehadiran",
        "__get__profiles", "__create__profiles", "__destroy__profiles","__updateById__profiles", "__create__team_project__task", "__get__team_project", "__get__task", "__create__task"
      ],
      "permission":"ALLOW"
    },
    {
      "accessType":"EXECUTE",
      "principalType":"ROLE",
      "principalId":"$owner",
      "property":[
        "__create__cuti", "__destroyById__cuti","__updateById__cuti",
        "__create__kehadiran", "__get__kehadiran",
        "__get__profiles", "__create__profiles", "__updateById__profiles", "__find__profiles", "__get__team_project", "__get__task"
      ],
      "permission":"ALLOW"
    }
  ],
  "methods": {}
}
