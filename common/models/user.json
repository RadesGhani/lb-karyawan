{
  "name": "user",
  "plural": "user",
  "base": "User",
  "idInjection": true,
  "restrictResetPasswordTokenScope": true,
  "emailVerificationRequired": false,
  "postgresql": {
    "schema": "public",
    "table": "user"
  },
  "properties": {
    "username": {
      "type": "String",
      "required": true,
      "max": 8,
      "min": 2
    },
    "email": {
      "type": "string",
      "required": true
    },
    "password": {
      "type": "String",
      "required": true,
      "max": 50,
      "min": 8,
      "pattern": "(?=.*[A-Z])(?=.*[!@#$&*])(?=.*[0-9])(?=.*[a-z])^.*$"
    }
  },
  "validations": [],
  "relations": {
    "cuti": {
      "type": "hasMany",
      "model": "cuti",
      "foreignKey": "user_id",
      "options": {
        "nestRemoting": true
      }
    },
    "kehadiran": {
      "type": "hasMany",
      "model": "kehadiran",
      "foreignKey": "user_id",
      "options": {
        "nestRemoting": true
      }
    },
    "profiles": {
      "type": "hasOne",
      "model": "profile",
      "foreignKey": "user_Id",
      "options": {
        "nestRemoting": true
      }
    },
    "salary": {
      "type": "hasOne",
      "model": "salary",
      "foreignKey": "user_id",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "create"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "deleteById"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "DENY",
      "property": "deleteById"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }

  ],
  "methods": {}
}
