{
  "name": "pengguna",
  "plural": "pengguna",
  "base": "User",
  "idInjection": true,
  "restrictResetPasswordTokenScope": true,
  "emailVerificationRequired": false,
  "inheritAcls": false,
  "postgresql": {
    "schema": "public",
    "table": "pengguna"
  },
  "properties": {
    "username": {
      "type": "String",
      "required": true,
      "max": 8,
      "min": 2
    },
    "email": {
      "type": "string",
      "required": true
    },
    "password": {
      "type": "String",
      "default": "ayaya",
      "required": true,
      "max": 50,
      "min": 8,
      "pattern": "(?=.*[A-Z])(?=.*[!@#$&*])(?=.*[0-9])(?=.*[a-z])^.*$"
    }
  },
  "validations": [],
  "relations": {
    "cuti": {
      "type": "hasMany",
      "model": "cuti",
      "foreignKey": "id_pengguna",
      "options": {
        "nestRemoting": true
      }
    },
    "saldo_cuti": {
      "type": "hasOne",
      "model": "saldo_cuti",
      "foreignKey": "id_pengguna",
      "options":{
        "nestRemoting": true
      },
      "through": "cuti"
    },
    "kehadiran": {
      "type": "hasMany",
      "model": "kehadiran",
      "foreignKey": "id_pengguna",
      "options": {
        "nestRemoting": true
      }
    },
    "profiles": {
      "type": "hasOne",
      "model": "profile",
      "foreignKey": "id_pengguna",
      "options": {
        "nestRemoting": true
      }
    },
    "salary": {
      "type": "hasOne",
      "model": "salary",
      "foreignKey": "id_pengguna",
      "options": {
        "nestRemoting": true
      }
    },
    "profile": {
      "type": "hasOne",
      "model": "profile",
      "foreignKey": "id_pengguna",
      "options": {
        "nextRemoting" : true
      }
    }
  },
  "acls": [
    {
      "accessType":"READ",
      "principalType":"ROLE",
      "principalId":"$everyone",
      "property":"*",
      "permission":"DENY"
    },
    {
      "accessType":"READ",
      "principalType":"ROLE",
      "principalId":"$authenticated",
      "property":"*",
      "permission":"ALLOW"
    },
    {
      "accessType":"EXECUTE",
      "principalType":"ROLE",
      "principalId":"$everyone",
      "property":[
        "create","deleteById","patchAttributes",
        "__delete__cuti","__create__cuti", "__destroyById__cuti","__updateById__cuti",
        "__delete__saldo_cuti","__create__saldo_cuti", "__destroyById__saldo_cuti","__updateById__saldo_cuti",
        "__delete__kehadiran","__create__kehadiran", "__destroyById__kehadiran","__updateById__kehadiran","__get__kehadiran",
        "__get__profile","__delete__profile","__create__profile", "__destroyById__profile","__updateById__profile"
      ],
      "permission":"DENY"
    },
    {
      "accessType":"EXECUTE",
      "principalType":"ROLE",
      "principalId":"admin",
      "property":[
        "create","deleteById","patchAttributes",
        "__delete__cuti","__create__cuti", "__destroyById__cuti","__updateById__cuti",
        "__destroy__saldo_cuti","__create__saldo_cuti", "__update__saldo_cuti",
        "__delete__kehadiran","__create__kehadiran", "__destroyById__kehadiran","__updateById__kehadiran","__get__kehadiran",
        "__get__profile","__delete__profile","__create__profile", "__destroyById__profile","__updateById__profile"
      ],
      "permission":"ALLOW"
    },
    {
      "accessType":"EXECUTE",
      "principalType":"ROLE",
      "principalId":"$owner",
      "property":[
        "__create__cuti", "__destroyById__cuti","__updateById__cuti",
        "__create__kehadiran", "__get__kehadiran",
        "__get__profile", "__create__profile", "__updateById__profile"
      ],
      "permission":"ALLOW"
    }

  ],
  "methods": {}
}
