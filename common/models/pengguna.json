{
  "name": "pengguna",
  "plural": "pengguna",
  "base": "User",
  "idInjection": true,
  "restrictResetPasswordTokenScope": true,
  "emailVerificationRequired": false,
  "postgresql": {
    "schema": "public",
    "table": "pengguna"
  },
  "properties": {
    "username": {
      "type": "String",
      "required": true,
      "max": 50,
      "min": 2
    },
    "email": {
      "type": "string",
      "required": true
    },
    "password": {
      "type": "String",
      "required": true,
      "max": 50,
      "min": 8,
      "pattern": "(?=.*[A-Z])(?=.*[!@#$&*])(?=.*[0-9])(?=.*[a-z])^.*$",
      "default": "ayaya"
    },
    "role": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "cuti": {
      "type": "hasMany",
      "model": "cuti",
      "foreignKey": "id_pengguna",
      "options": {
        "nestRemoting": true
      }
    },
    "saldo_cuti": {
      "type": "hasOne",
      "model": "saldo_cuti",
      "foreignKey": "id_pengguna",
      "options": {
        "nestRemoting": true
      },
      "through": "cuti"
    },
    "kehadiran": {
      "type": "hasMany",
      "model": "kehadiran",
      "foreignKey": "id_pengguna",
      "options": {
        "nestRemoting": true
      }
    },
    "tim": {
      "type": "belongsTo",
      "model": "tim",
      "foreignKey": "nama_tim",
      "options": {
        "nestRemoting": true
      }
    },
    "profil": {
      "type": "hasOne",
      "model": "profil",
      "foreignKey": "id_pengguna",
      "options": {
        "nestRemoting": true
      }
    },
    "gaji": {
      "type": "hasOne",
      "model": "gaji      ",
      "foreignKey": "id_pengguna",
      "options": {
        "nestRemoting": true
      }
    },
    "pinjaman": {
      "type": "hasMany",
      "model": "pinjaman",
      "foreignKey": "id_pengguna",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "*"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": [
        "find", "patchAttributes",
        "__get__cuti", "__create__cuti", "__delete__cuti", "__destroyById__cuti", "__updateById__cuti",
        "__get__profil", "__create__profil", "__update__profil", "__updateById__profil", "__find__profil",
        "__get__saldo__cuti", "__get__saldo__cuti",
        "__get__kehadiran", "__create__kehadiran",
        "__kehadiran__find", "__kehadiran__masuk","__kehadiran__pulang",
        "__get__tim",
        "__get__tugas"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "HRD",
      "permission": "ALLOW",
      "property": [
        "find", "create", "deleteById", "patchAttributes",
        "__create__cuti", "__destroyById__cuti", "__updateById__cuti",
        "__create__kehadiran", "__destroyById__kehadiran", "__updateById__kehadiran",
        "__get__kehadiran",
        "__get__profil",
        "__create__profil",
        "__destroy__profil",
        "__updateById__profil",
        "__update__profil",
        "__create__tim__tugas",
        "__get__tim",
        "__get__tugas",
        "__create__tugas"
      ]
    }
  ],
  "methods": {}
}
